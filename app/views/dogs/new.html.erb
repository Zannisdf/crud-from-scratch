<h1>New dog</h1>

<% if notice.present? %>
  <%= notice %>
<% end %>

<% if alert.present? %>
  <%= alert %>
<% end %>


<%= form_with(model: @dog, local: true) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :age %>
  <%= f.number_field :age %>
  <%= f.submit 'Create!' %>
<% end %>

<%= link_to 'Back', root_path %>
